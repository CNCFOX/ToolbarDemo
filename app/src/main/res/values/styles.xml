        <!-- 设置下面软back menu 颜色-->
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
